" Basic universal configurations
set rnu

" Syntax and highlighting
syntax enable
filetype plugin on " enables $HOME/.vim/ftplugin folder with .vim files
" for filetype confugirations
filetype indent on

" Enable mouse support
set mouse=a

" We can source other vimrc for modularity using "source <filename>"
" source $DOTS/vimconfs/NERDTree.vimrc
source ~/.plugins.vimrc/NERDTree.vimrc

" VIM Whitespace - Added whitespaces
" Using vim plugin for better spaces; Using this for just backup
" set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<,space:␣
" set nolist


